    "asset-require-hook": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "chai": "^3.4.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "eslint": "^3.8.1",
    "gulp-babel": "^6.1.2",
    "gulp-util": "^3.0.7",
    "mocha": "^3.1.2",
    "rimraf": "^2.5.4"
  }
